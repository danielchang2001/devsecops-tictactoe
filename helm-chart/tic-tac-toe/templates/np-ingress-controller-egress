apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-nginx-egress
  namespace: ingress-nginx
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: ingress-nginx
  policyTypes:
    - Egress
  egress:
    # Allow internal pod-to-pod traffic only within cluster subnet
    # No external internet traffic allowed
    - to:
        - ipBlock:
            cidr: 192.168.126.0/24
      ports:
        - protocol: TCP
          port: 80     # Frontend
        - protocol: TCP
          port: 8000   # Backend